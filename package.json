    "fastify-metrics": "^12.1.0",
    "fastify-plugin": "^5.1.0",
    "nock": "^14.0.10",
    "path-to-regexp": "^8.3.0",
    "pg": "^8.16.3",
    "pino-pretty": "13.1.3",
    "pm2-prom-module-client": "^1.0.3",
    "rimraf": "^6.1.2"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@eslint/eslintrc": "^3.3.3",
